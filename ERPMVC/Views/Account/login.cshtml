<link href="~/css/login.css" rel="stylesheet" />
@model ERPMVC.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layoutlogin.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6 col-md-offset-3">
            <div class="col-md-6 col-sm-6 col-xs-6 col-md-offset-3">
                <div id="iosBlurBg">
                    <div id="whiteBg"></div>
                </div>
                <div id="bottomEnter"></div>
                <div id="bottomBlurBg"></div>
                <!-- Login Form -->
                <div class="loginForm">
                    <div class="title">
                        <p>Ingresar a <br><span>ERP</span></p>
                        <hr>
                        <hr class="short">
                    </div>
                    <form asp-controller="Account" asp-action="Login">
                        <div class="col-3">
                            <input id="Email" asp-for="@Model.Email" class="effect-2" type="text" style="min-width:100%" placeholder="Login...">
                            <span class="focus-border"></span>
                            <input id="Password" asp-for="@Model.Password" class="effect-2" type="password" placeholder="Password...">
                            <span class="focus-border"></span>
                        </div>
                        <div class="forget">
                            <button class="btn btn-default btn-sm" type="submit">
                                Entrar
                            </button>
                        </div>
                    </form>
                    <br />
                    @if (Model != null)
                    {
                        if (Model.Failed)
                        {
                            <div class="alert alert-error" style="display:block" id="satisfactoriomsj">Ingrese un usuario y password correctos</div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>