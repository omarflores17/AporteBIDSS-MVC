                    $.ajax({
                        url: '@Url.Action("SaveGoodsDelivered", "GoodsDelivered")',
                        method: 'POST',
                        datatype: "json",
                        //contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                        contentType: 'application/json',
                        async: false,
