            return false;
        }

        if (input.attr('name') === "WeightBallot" && input.val() == 0) {
            return false;
        }

        


        return true;
    }

    function closeGoodsDelivered() {
        $("#myModalGoodsDelivered").modal('hide');
        var grid = $("#gridGoodsDelivered").getKendoGrid();
        grid.dataSource.read();
    }



</script>

