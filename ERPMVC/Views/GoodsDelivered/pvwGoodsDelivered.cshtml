                            $("#btnSaveControlEstiba").prop("disabled", false);
                            $("#btngenerarfactura").show();
                            notification.show({
                                title: "Validación",
                                message: textStatus + ": " + XMLHttpRequest.responseText
                            }, "error");

                        }
                    });

