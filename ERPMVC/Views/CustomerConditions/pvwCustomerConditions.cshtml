                                         <transport>
                                             <read url="@Url.Action("GetTiposDocumento", "TiposDocumento")" />
                                         </transport>
                                     </datasource>
                                 </kendo-dropdownlist>
                                 <span asp-validation-for="IdTipoDocumento" class="text-danger"></span>
