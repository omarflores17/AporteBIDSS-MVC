                                     </datasource>
                                 </kendo-dropdownlist>
                                 <span asp-validation-for="ConditionId" class="text-danger"></span>
                             </div>
                         </div>


                         <div class="col-md-4">
                             <div class="form-group">
                                 <label asp-for="CustomerId" class="control-label" style="width:100%"></label>

                                 <kendo-dropdownlist id="CustomerId_CC"
