                                 </kendo-dropdownlist>
                                 <span asp-validation-for="CustomerId" class="text-danger"></span>
                             </div>
                         </div>
                     </div>


                     <div class="row">
                         <div class="col-md-4">
                             <div class="form-group">
                                 <label asp-for="ProductId" class="control-label" style="width:100%"></label>

                                 <kendo-dropdownlist id="ProductId_CC"
