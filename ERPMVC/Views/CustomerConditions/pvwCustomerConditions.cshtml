                                                     datavaluefield="ProductId"
                                                     enable="false"
                                                     required
                                                     auto-bind="false"
                                                     style="width: 100%;">
                                     <datasource type="DataSourceTagHelperType.WebApi" page-size="5000">
                                         <transport>
