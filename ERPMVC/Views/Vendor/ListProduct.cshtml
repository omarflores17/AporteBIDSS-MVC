        <h3 class="text-themecolor"> </h3>
        @(Html.Kendo().Grid<ERPMVC.Models.Product>
                                                    ()
                                                    .Name("gridNumeracionProduct")
                                                    .Columns(columns =>
                                                    {
                                                        columns.Bound(p => p.ProductCode).Title("Código").Width(150);
                                                        columns.Bound(p => p.ProductName).Title("Nombre").Width(250);
                                                        columns.Bound(p => p.DefaultBuyingPrice).Title("Costo").Width(250).Format("{0:C}");
                                                        columns.Bound(p => p.DefaultSellingPrice).Title("Precio").Width(250).Format("{0:C}");
                                                    })
                                                    .Filterable(f => f.Operators(o => o.ForString(s => s
                                                    .Clear()
                                                    .Contains("Contiene")
                                                    .DoesNotContain("No contiene")
                                                    .EndsWith("Termina con")
                                                    .IsEqualTo("Es igual a")
                                                    .IsNotEqualTo("No es igual a")
                                                    .IsNull("Es nulo")
                                                    .StartsWith("Inicia con")


                                                    )
                                                    .ForNumber(n => n
                                                    .Clear()
                                                    .IsEqualTo("Es igual a")
                                                    .IsGreaterThan("Es mayor que")
                                                    .IsLessThan("Es menor que")
                                                    .IsNull("Es nulo")
                                                    .IsLessThanOrEqualTo("Es menor o igual que")
                                                    .IsGreaterThanOrEqualTo("Es mayor o igual que")
                                                    )
                                                    .ForDate(d => d
                                                    .Clear()
                                                    .IsEqualTo("Es igual que")
                                                    .IsGreaterThan("Es mayor que")
                                                    .IsLessThan("Es menor que")
                                                    .IsLessThanOrEqualTo("Es menor o igual que")
                                                    .IsGreaterThanOrEqualTo("Es mayor o igual que")
                                                    .IsNotEqualTo("No es igual que")
                                                    )
                                                    ))
                                                    .ToolBar(tools =>
                                                    {
                                            // tools.Create();
                                            //tools.Custom().Text("Agregar").IconClass("k-icon k-i-plus").HtmlAttributes(new { @onclick = "Agregar();" });
                                            //tools.Excel().Text("Exportar a excel").HtmlAttributes(new { @class = "toolbar-field" });
                                            //tools.Pdf().Text("Exportar a pdf").HtmlAttributes(new { @class = "toolbar-field" });



                                        })
                                                    .Editable(e => e.Mode(GridEditMode.PopUp))
                                                    .Sortable()
                                                    .Pageable()
                                                    .Filterable()
                                                    .Scrollable()
                                                    .Pdf(pdf => pdf.FileName("ProductReport" + DateTime.Now.Year + "_" + DateTime.Now.Month + "_"
                                                    + DateTime.Now.Day + "_" + DateTime.Now.Hour + "_" + DateTime.Now.Minute + "_" + DateTime.Now.Second + ".pdf")
                                                    .ProxyURL(Url.Action("Export", "Home")).AllPages())
                                                    .Excel(excel => excel.FileName("ProductReport_" + DateTime.Now.Year + "_" + DateTime.Now.Month + "_"
                                                    + DateTime.Now.Day + "_" + DateTime.Now.Hour + "_" + DateTime.Now.Minute + "_" + DateTime.Now.Second + ".xlsx").Filterable(true)
                                                    .ProxyURL(Url.Action("Export", "Home")).AllPages(true))
                                                    .DataSource(dataSource =>
                                                    dataSource
                                                    .WebApi()

                                                    .ServerOperation(true)
                                                    .Model(model =>
                                                    {
                                                        model.Id(p => p.ProductId);

                                                    })
                                                    .Events(events => events.Error("error_handler"))
                                                    .Read(read => read.Action("GetProductsByVendorId", "Vendor").Data("GetVendorId"))
                                                    //.Create(create => create.Action("Insert", "Product"))
                                                    //.Update(update => update.Action("Update", "Product", new { TypeAccountId = "{0}" }).Type(HttpVerbs.Put))

                                                    )
                                                    .Events(e =>
                                                    {


                                                    })
        )
