@model ERPMVC.Models.GoodsDeliveryAuthorizationLine

<script>

    completedorderlinemant = function (xhr) {

        $('#myModalGoodsDeliveryAuthorizationLine').find(':input').not('#GoodsDeliveryAuthorizationLineId :submit').val('0');
        $('#SubProductId').data("kendoDropDownList").value('0');
        $('#UnitOfMeasureId').data("kendoDropDownList").value('0');
        $('#WarehouseId').data("kendoDropDownList").value('0');
        CalcularTotalDocumento();
        $("#btnActualizarCotizacionLinea").prop("disabled", false);
       closesaleorderline();
    };


    function closesaleorderline() {
       // debugger;
        $("#myModalGoodsDeliveryAuthorizationLine").modal('hide');

    }

    function CalcularTotal() {
        debugger;
        var Quantity = Number($("#Quantity").val());
        var Price = Number($("#Price").val());
        // var QuantitySacos = Number($("#QuantitySacos").val());
        // var Totallinea = (Quantity * Price);

        var idlinea = $("#GoodsDeliveryAuthorizationLineId").val();

        var nombrecantidadoriginal = "#QuantityOriginal" + idlinea;
        var nombrevalorimpuestosoriginal = "#ValorImpuestosOriginal" + idlinea;
        var QuantityOriginal = Number($(nombrecantidadoriginal).val());
        var valorimpuestos = $(nombrevalorimpuestosoriginal).val() / QuantityOriginal;

        setearvalor("ValorImpuestos", Quantity * valorimpuestos);
        setearvalor("valorcertificado", Quantity * Price);

    }


    function CalcularTotalDocumento() {
       // var freight = $("#Freight").val()===""?0:$("#Freight").val();

        var displayedData = $("#gridGoodsDeliveredAuthorizationLine").data().kendoGrid.dataSource.data();
        var totalcertificado = 0, totalfinanciado = 0, ValorImpuestos=0;

        $(displayedData).each(function (index, element) {
            var t = JSON.parse(JSON.stringify(element));

            totalcertificado = totalcertificado + t["valorcertificado"];
            totalfinanciado = totalfinanciado + t["valorfinanciado"];
            ValorImpuestos = ValorImpuestos + t["ValorImpuestos"];
       });

        setearvalor('TotalCertificado', totalcertificado);
        setearvalor('TotalFinanciado', totalfinanciado);
        setearvalor('DerechoLps', ValorImpuestos);

    }

    function AddGoodsDeliveryAuthorizationDetail(e) {
       // e.preventDefault();
        var notification = $("#notification").data("kendoNotification");

        
        if (Number($("#Quantity").val()) > Number($("#SaldoProducto").val())) {
            notification.show({
                title: "Validación",
                message: "La cantidad autorizada no puede ser mayor al inventario de: " + $("#SaldoProducto").val() +"!"
            }, "error");
            return false;
        }

        var form1 = $("#frmGoodsDeliveryAuthorizationLine").data("kendoValidator");
        if (form1.validate() && $("#SubProductId").val() > '0' && $("#UnitOfMeasureId").val() > '0' ) {

            //$('#myModalGoodsDeliveryAuthorizationLine').modal('hide');
            RefreshGoodsDeliveredDetail();
        }
        else {
                  notification.show({
                  title: "Validación",
                  message: "Seleccione los datos obligatorios!"
                  }, "error");

           // break;
            return false;
        }


        return true;
    }

    function setearvalor(nombrenumerico,valor) {
        var numeric = $("#" + nombrenumerico).data("kendoNumericTextBox");
        numeric.value(valor);
        numeric.trigger('change');
        numeric = null;
    }



    function GetPercentage() {
        var dataObject = { TaxId: $("#TaxCode").val()};
         $.ajax({
            url: '@Url.Action("GetTaxById", "Tax")',
            method: 'GET',
            datatype: "json",
            contentType: 'application/json',
            async: false,
            data: dataObject,
             success: function (result) {
                 setearvalor("TaxPercentage", result.TaxPercentage);
                 CalcularTotal();
            },
             error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert(textStatus + ": " + XMLHttpRequest.responseText);
              }
         });

    }



    function cargarloader() {
       $("#btnActualizarCotizacionLinea").prop("disabled", true);
    }

    function agregarcondicionpopup() {
        var dataObject = { 'ConditionId': $("#ConditionId").val() };

           $.ajax({
            url: '@Url.Action("pvwConditions", "Conditions")',
            method: 'GET',
            datatype: "json",
            contentType: 'application/json',
            async: false,
            data: dataObject,
               success: function (result) {
                   //console.log(result);
                   //debugger;
                   $("#ConditionView").html('');
                   $("#ConditionView").html(result);

            },
             error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert(textStatus + ": " + XMLHttpRequest.responseText);
              }
         });

        $('#myModalConditions').modal('show');

    }

    function AgregarCustomerCondition() {
        var notification = $("#notification").data("kendoNotification");


        if ($("#SalesOrderId").val() > 0) {
            $('#myModalCustomerConditions').modal('show');
        }
        else {
            notification.show({
                title: "Validación",
                message: "Para agregar una condición debe generar el documento!"
            }, "info");
        }
    }

</script>

