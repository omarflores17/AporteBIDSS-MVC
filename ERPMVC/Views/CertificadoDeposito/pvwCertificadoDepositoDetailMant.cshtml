        var quantity = $("#Quantity").data("kendoNumericTextBox");
        quantity.value(0);
        quantity.trigger('change');

        var Price = $("#Price").data("kendoNumericTextBox");
        Price.value(0);
        Price.trigger('change');

        var Amount = $("#AmountLine").data("kendoNumericTextBox");
        Amount.value(0);
        Amount.trigger('change');
      //  RefreshCertificadoDepositoDetail();
        $('DescriptionDetail').val('');
        CalcularTotalDocumento();
         //$('#TaxCode').val('0');
         //$('#TaxCode').data("kendoDropDownList").value('0');
        //$('#TaxCode').data("kendoDropDownList").value(0);
        $("#btnActualizarCotizacionLinea").prop("disabled", false);
       closesaleorderline();
    };


    function closesaleorderline() {
        $("#myModalCertificadoDepositoLine").modal('hide');

    }


    function CalcularTotalDocumento() {
        //var freight = $("#Freight").val()===""?0:$("#Freight").val();

        var displayedData = $("#gridCertificadoDepositoDetail").data().kendoGrid.dataSource.view();
        var total = 0, sumacantidad = 0, ValorImpuestos=0;

        $(displayedData).each(function (index, element) {
            var t = JSON.parse(JSON.stringify(element));
            //console.log(t);
            //console.log('Total 1'+total);
              //  console.log('sumacantidad 2' + sumacantidad);
            sumacantidad = sumacantidad + t["Quantity"];
            total = total + t["Amount"];
            ValorImpuestos = ValorImpuestos + t["ValorImpuestos"];
        });

      //  console.log('Total Documento:' + total);
        setearvalor("Quantitysum", sumacantidad);
        setearvalor("SujetasAPago", ValorImpuestos);
        setearvalor("Total", total);
        //$("#Quantitysum").data("kendoNumericTextBox").value(sumacantidad);
        //$("#Total").data("kendoNumericTextBox").value(total);

    }

    function AddConceptoCotizacion(e) {
       // e.preventDefault();
        var notification = $("#notification").data("kendoNotification");
        if ($("#SubProductId").val() > 0) {
            try {
                $("#btnActualizarCotizacionLinea").prop("disabled", true);
                RefreshCertificadoDepositoDetail();

            } catch (e) {
                $("#btnActualizarCotizacionLinea").prop("disabled", false);
            }
        }
        else {
            notification.show({
                title: "Validación",
                message: "Seleccione el SubProducto!"
            }, "error");

            return false;
        }

        return true;
    }


    function setearvalor(nombrenumerico,valor) {
        var numeric = $("#" + nombrenumerico).data("kendoNumericTextBox");
        numeric.value(valor);
        numeric.trigger('change');
        numeric = null;
    }



    function GetPercentage()
    {
        if ($("#TaxCode").val() != null) {
            var dataObject = { TaxId: $("#TaxCode").val() };
            $.ajax({
                url: '@Url.Action("GetTaxById","Tax")',
                method: 'GET',
                datatype: "json",
                contentType: 'application/json',
                async: false,
                data: dataObject,
                success: function (result) {
                    setearvalor("TaxPercentage", result.TaxPercentage);
                    CalcularTotal();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert(textStatus + ": " + XMLHttpRequest.responseText);
                }
            });
        }

    }

    function CalcularTotal() {
        //debugger;
        var quantity = $("#Quantity").val();
        var price = $("#Price").val();
        var amount = quantity * price;
        setearvalor("AmountLine", amount);


