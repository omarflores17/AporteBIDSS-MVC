@model ERPMVC.DTO.PuntoEmisionDTO

@{ Layout = null;
    var messages = new Dictionary<string, string>() { { "custom", "Ingrese un valor correcto." },
           // {"required","Valor requerido" }
        };
    var rules = new Dictionary<string, string>() { { "custom", "customFunction" } };
}

<script>

    function customFunction(input) {

        if (input.attr('name') === "BranchId" && input.val() === "0") {
            return false;
        }

    }

    //$('#btnprueba').val("");
</script>



<div id="ModalPuntoEmision" class="modal fade" role="dialog">
    <!-- Modal content-->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Punto Emisión</h4>
                <button type="button" name="btnprueba" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row" id="validation">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <form id="frmPuntoEmision" kendo-validator="true"
                                      data-ajax="true"
                                      data-ajax-method="post"
                                      data-ajax-begin="SavePuntoEmision"
                                      class="validation-wizard wizard-circle">
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="IdPuntoEmision" class=" control-label" style="width:100%"></label>
                                                    <input type="text" asp-for="IdPuntoEmision" name="IdPuntoEmision" class="form-control" disabled="disabled" style="width:100%" />
                                                    <span asp-validation-for="IdPuntoEmision" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="BranchId" class="control-label">Sucursal</label>
                                                    <kendo-dropdownlist name="BranchId"
                                                                        for="@Model.BranchId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Sucursal"
                                                                        datatextfield="BranchName"
                                                                        datavaluefield="BranchId"
                                                                        data-val-required="La Sucursal es requerida."
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true" page-size="9999999999">
                                                            <transport>
                                                                <read url="@Url.Action("Get", "Branch")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                    <span asp-validation-for="BranchId" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="PuntoEmisionCod" class=" control-label" style="width:100%">Código punto de emisión</label>
                                                    <input type="text" asp-for="PuntoEmisionCod" onKeyPress="return soloNumeros(event)" name="PuntoEmisionCod" required data-required-msg="El Código punto de emisión es requerido." class="form-control" style="width:100%" />
                                                    <span asp-validation-for="PuntoEmisionCod" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="Estado" class="control-label"></label>
                                                    <kendo-dropdownlist name="IdEstado"
                                                                        for="@Model.IdEstado"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Estado"
                                                                        datatextfield="NombreEstado" data-val-required="El Estado es requerido."
                                                                        datavaluefield="IdEstado"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetGrupoEstadoUno", "Estados")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                    <span asp-validation-for="IdEstado" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="modal-footer">
                                            <button id="btnPuntoEmision" class="btn btn-success" type="button" onclick="SavePuntoEmision()">Guardar</button>
                                            <button type="button" class="btn btn-default" data-dismiss="modal" name="close">Cerrar</button>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#PuntoEmisionCod").on('paste', function (e) {
            e.preventDefault();
        });
    });
    function soloNumeros(e) {
        var key = window.Event ? e.which : e.keyCode
        return (key >= 48 && key <= 57)
    }
    function RefrescarGrid() {

        var grid = $("#gridPuntoEmision").getKendoGrid();
        grid.dataSource.read();

    }
    function SavePuntoEmision(e) {
        $("#btnPuntoEmision").hide();
        $("#btnPuntoEmision").prop("disabled", true);

        var dataObject = {  'IdPuntoEmision': $("#IdPuntoEmision").val()===""?"0":$("#IdPuntoEmision").val(),
                        'PuntoEmisionCod': $("#PuntoEmisionCod").val(),
                        'IdEstado': $("#IdEstado").val(),
                        'BranchId': $("#BranchId").val(),
                        'BranchName': $("#BranchId").data("kendoDropDownList").text(),
                        'Estado': $("#IdEstado").data("kendoDropDownList").text()
        };

        var validator = $("#frmPuntoEmision").data("kendoValidator");
                var status = $(".status");
        
            if (validator.validate()) {

                $.ajax({
                    url: '@Url.Action("SavePuntoEmision", "PuntoEmision")',
                    method: 'POST',
                    datatype: "json",
                    contentType: 'application/json',
                    async: false,
                    data: JSON.stringify(dataObject),
                    success: function (data) {
                        swal("Punto Emisión", "Guardado Satisfactoriamente", "success");
                        RefrescarGrid();

                        $('#ModalPuntoEmision').modal('hide');

                        window.addEventListener("keyup", function (event) {
                            var codigo = event.keyCode || event.which;
                            if (codigo == 13) {
                            }
                        }, false);
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        swal(textStatus + ": " + XMLHttpRequest.responseText);
                    }
                });
            }
            else {
                swal("Validación", "Ingrese todos los datos en el formulario!", "info");
            }
        $("#btnPuntoEmision").show();
        $("#btnPuntoEmision").prop("disabled", false);
    }
</script>
