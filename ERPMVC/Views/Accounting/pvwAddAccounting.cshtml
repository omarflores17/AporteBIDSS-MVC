<div id="ModalAccounting" class="modal fade" role="dialog">
    <!-- Modal content-->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" name="btnprueba" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Catálogo de Cuentas</h4>
            </div>
            <div class="modal-body">
                <div class="row" id="validation">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <form id="frmAccounting" kendo-validator="true"
                                      data-ajax="true"
                                      data-ajax-method="post"
                                      data-ajax-begin="SaveAccounting"
                                      class="validation-wizard wizard-circle">
                                    <div class="form-body">
                                        <h3 class="card-title">Catálogo de Cuentas</h3>
                                        <hr>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="AccountId" class=" control-label" style="width:100%">Identificador de Cuenta:</label>
                                                    <input type="text" asp-for="AccountId" name="AccountId" class="form-control" readonly="readonly" style="width:100%" />
                                                    <span asp-validation-for="AccountId" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="AccountName" class=" control-label" style="width:100%">Nombre de la Cuenta:</label>
                                                    <input type="text" asp-for="AccountName" name="AccountchName" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="AccountName" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <label asp-for="ParentAccountId" class=" control-label" style="width:100%">Padre de la cuenta:</label>
                                                <kendo-dropdownlist name="ParentAccountId"
                                                                    for="@Model.ParentAccountId"
                                                                    filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                    option-label="Seleccionar Cuenta Contable"
                                                                    datatextfield="AccountName"
                                                                    datavaluefield="AccountId"
