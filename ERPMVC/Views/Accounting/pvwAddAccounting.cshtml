                                                    <span asp-validation-for="BlockedInJournal" class="text-danger k-invalid-msg" data-for="BlockedInJournal"></span>

                                                </div>

                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="IsCash" class="control-label" style="width: 100%;">Activa</label>
                                                    @*Html.Kendo().CheckBoxFor(m => m.IsCash)

         @(Html.Kendo().SwitchFor(m => m.IsCash)
                             .Name("IsCash")
              //.Events(ev => ev.Change("onChange"))
        ) *@
                                                    <input type="text" asp-for="IsCash" name="IsCash" class="form-control" autocomplete="off" style="width:100%" />

                                                    <span asp-validation-for="IsCash" class="text-danger k-invalid-msg" data-for="IsCash"></span>

                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label asp-for="Description" class=" control-label" style="width:100%"></label>
                                                    <textarea asp-for="Description" name="Description" required class="form-control required " style="min-width: 100% !important;"></textarea>

                                                    @* <input type ="text" asp-for="Description" name="Description" class="form-control" autocomplete="off" style="width:100%"/>*@
                                                    <span asp-validation-for="Description" class="text-danger"></span>

                                                </div>

                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button id="btnAccounting" class="form-control btn-miboton" type="submit"> Guardar </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function RefrescarGrid() {

        var grid = $("#gridNumeracionAccount").getKendoGrid();
        grid.dataSource.read();
    }

    function SaveAccounting(e)
    {
        debugger;

            var notification = $("#notification").data("kendoNotification");
           // e.preventDefault();
        $("#btnAccounting").hide();
        $("#btnAccounting").prop("disabled", true);

        var displayedData = $("#gridNumeracionAccount").data().kendoGrid.dataSource.view();

        var dataObject = { 'AccountId': $("#AccountId").val()===""?"0":$("#AccountId").val(),
                           'AccountName': $("#AccountName").val(),
                           'Description': $("#Description").val(),
                           'ParentAccountId': $("#ParentAccountId").val(),
                           'AccountCode': $("#AccountCode").val(),
                            'IsCash': $("#IsCash").val(),
                            'BlockedInJournal': $("#BlockedInJournal")..val(),
                            'CompanyInfoId': $("#CompanyInfoId").val(),
                            'HierarchyAccount': $("#HierarchyAccount").val(),
                            'TypeAccountId': $("#TypeAccountId").val(),
                            'FechaCreacion': $("#FechaCreacion").val(),
                            'FechaModificacion':$("#FechaModificacion").val(),
                            'UsuarioCreacion':$("#UsuarioCreacion").val(),
                            'UsuarioModificacion':$("#UsuarioModificacion").val(),
                            '_Accounting': displayedData
            };

           // console.log(JSON.stringify(dataObject));
            //var form = $("#frmNumeracion");
           // form.validate();

        var validator = $("#frmAccounting").data("kendoValidator");
                 var status = $(".status");


                if (validator.validate()) {

                    $.ajax({
                        url: '@Url.Action("SaveAccounting", "Accounting")',
                        method: 'POST',
                        datatype: "json",
                        contentType: 'application/json',
                        async: false,
                        data: JSON.stringify(dataObject),
                        success: function (data) {

                            //notification.show({
                            //    message: "Guardado correctamente!"
                            //}, "upload-success");
                            $.toast({
                                heading: 'Satisfactorio',
                                text: '<br/><br/>Datos guardados correctamente.',
                                position: 'top-right',
                                loaderBg: '#ff6849',
                                icon: 'success',
                                hideAfter: 30000,
                                stack: 6
                            });

                            RefrescarGrid();

                            $('#ModalAccounting').modal('hide');

                            //ModalAccount
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {

                            
                            notification.show({
                                title: "Validacion",
                                message: textStatus + ": " + XMLHttpRequest.responseText
                            }, "error");

                        }
                    });

                }
                else {
                    status.text("Oops! There is invalid data in the form.")
                        .removeClass("valid")
                        .addClass("invalid");
                }


        $("#btnAccounting").show();
        $("#btnAccounting").prop("disabled", false);
    }
</script>