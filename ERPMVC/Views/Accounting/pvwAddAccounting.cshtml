                                                        <transport>
                                                            <read url="@Url.Action("GetAccount", "Accounting")" />
                                                        </transport>
                                                    </datasource>
                                                </kendo-dropdownlist>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="HierarchyAccount" class="control-label" style="width: 100%;">Nivel de Cuenta:</label>
                                                    <input type="text" asp-for="HierarchyAccount" name="HierarchyAccount" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="HierarchyAccount" class="text-danger"></span>

                                                </div>


                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="AccountCode" class="control-label" style="width: 100%;">Código de la Cuenta:</label>
                                                    <input type="text" asp-for="AccountCode" name="AccountCode" class="form-control" autocomplete="off" style="width:100%" />
                                                    <span asp-validation-for="AccountCode" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="CompanyInfoId" class="control-label" style="width: 100%;"></label>
                                                    <kendo-dropdownlist name="CompanyInfoId"
                                                                        for="@Model.CompanyInfoId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Compañia"
                                                                        datatextfield="Company_Name"
                                                                        datavaluefield="CompanyInfoId"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("Get", "CompanyInfo")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>

                                                </div>
                                            </div>


                                        </div>

                                        <div class="row">

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="TypeAccountId" class="control-label" style="width: 100%;">Tipo de Cuenta</label>
                                                    <kendo-dropdownlist name="TypeAccountId"
                                                                        for="@Model.TypeAccountId"
                                                                        filter="Kendo.Mvc.UI.FilterType.Contains"
                                                                        option-label="Seleccionar Tipo"
                                                                        datatextfield="TypeAccountName"
                                                                        datavaluefield="TypeAccountId"
                                                                        style="width: 100%;">
                                                        <datasource type="DataSourceTagHelperType.WebApi" server-operation="true">
                                                            <transport>
                                                                <read url="@Url.Action("GetTypeAccount", "TypeAccount")" />
                                                            </transport>
                                                        </datasource>
                                                    </kendo-dropdownlist>
                                                </div>

                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label asp-for="BlockedInJournal" class=" control-label" style="width:100%"></label>
                                                    @*Html.Kendo().CheckBoxFor(m => m.)
        @(Html.Kendo().SwitchFor(m => m.BlockedInJournal)
                      .Name("BlockedInJournal")
               //.Events(ev => ev.Change("onChange"))
         ) *@
